<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.GameActivity">
        <TextView
            android:id="@+id/tv_nomer_soal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03"
            android:textSize="30sp"
            android:paddingRight="30dp"
            android:paddingLeft="20dp"
            android:paddingVertical="10dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">
            <TextView
                android:id="@+id/tv_petanyaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mana Penulisan yang benar?"
                android:visibility="gone"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/btn_pilihan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingHorizontal="30dp"
                android:text="Pilihan 1"
                android:textColor="#ffffff"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:background="@color/textColor"/>
            <Button
                android:id="@+id/btn_pilihan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="30dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:text="Pilihan 2"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:background="@color/textColor"/>
            <TextView
                android:id="@+id/tv_durasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text="03"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginTop="80dp"
                android:padding="10dp"
                android:textColor="#000"
                />
            <Button
                android:id="@+id/btn_mulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:background="@color/textColor"
                android:text="mulai"
                android:textAlignment="center"
                android:layout_marginTop="80dp"
                android:padding="10dp"
                android:textColor="#fff"
                />
        </LinearLayout>

    </RelativeLayout>